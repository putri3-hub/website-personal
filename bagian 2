  <script>
    // JavaScript kecil untuk fitur: flip main photo on click + ganti gambar dari thumbnail
    (function(){
      const main = document.getElementById('mainPhoto');
      const t1 = document.getElementById('t1');
      const t2 = document.getElementById('t2');

      // flip on single click
      main.addEventListener('click', ()=>{
        main.classList.toggle('flipped');
      });

      // helper: set active thumbnail
      function setActiveThumb(active){
        [t1,t2].forEach(t=> t.classList.toggle('active', t===active));
      }

      // change main photo when clicking thumbnail (ke thumbnail image path)
      [t1,t2].forEach(t => {
        t.addEventListener('click', ()=>{
          const src = t.dataset.src;
          if(!src) return;
          main.classList.remove('flipped'); // reset flip saat ganti foto
          main.src = src;
          setActiveThumb(t);
        });
      });

    })();
  </script>
